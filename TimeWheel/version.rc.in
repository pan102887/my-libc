#define VER_FILEVERSION             @LIB_VERSION_MAJOR@,@LIB_VERSION_MINOR@,@LIB_VERSION_PATCH@
#define VER_FILEVERSION_STR         "@LIB_VERSION_MAJOR@.@LIB_VERSION_MINOR@.@LIB_VERSION_PATCH@\0"

#define VER_PRODUCTVERSION          @LIB_VERSION_MAJOR@,@LIB_VERSION_MINOR@,@LIB_VERSION_PATCH@
#define VER_PRODUCTVERSION_STR      "@LIB_VERSION_MAJOR@.@LIB_VERSION_MINOR@.@LIB_VERSION_PATCH@\0"

1 VERSIONINFO
FILEVERSION VER_FILEVERSION
PRODUCTVERSION VER_PRODUCTVERSION
BEGIN
  BLOCK "StringFileInfo"
  BEGIN
    BLOCK "040904E4"
    BEGIN
        VALUE "FileDescription", "Time Wheel is the best way to keep track of time spent on projects and tasks."
        VALUE "FileVersion", VER_FILEVERSION_STR
        VALUE "ProductVersion", VER_PRODUCTVERSION_STR
        VALUE "CompanyName", "@MY_COMPANY_NAME@\0"
        VALUE "ProductName", "TimeWheel libarary"
        VALUE "InternalName", "time_wheel"
        VALUE "OriginalFilename", "time_wheel.dll"
        VALUE "LegalCopyright", "Copyright (C) 2010-2011 @MY_COMPANY_NAME@"
    END
  END
  /* For some reason the ProductVersion would not appear unless I add the following section: VarFileInfo */
  BLOCK "VarFileInfo"
  BEGIN
    VALUE "Translation", 0x409, 1252
  END
END